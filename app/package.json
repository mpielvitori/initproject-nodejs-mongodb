{
  "name": "initproject-nodejs",
  "version": "1.0.0",
  "description": "Init project for nodejs/mongodb app",
  "type": "module",
  "scripts": {
    "lint": "eslint ./",
    "test": "jest ./src",
    "test-coverage": "jest --coverage",
    "start": "node --experimental-modules ./src/index.js start",
    "start-dev": "nodemon --experimental-modules ./src/index.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Mart√≠n Pielvitori",
  "license": "MIT",
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.15.2",
    "jest": "24.8.0",
    "nodemon": "2.0.1"
  },
  "dependencies": {
    "express": "4.17.1",
    "mongoose": "5.10.0",
    "body-parser": "1.19.0",
    "config": "3.3.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "verbose": true,
    "testEnvironment": "node"
  }
}
