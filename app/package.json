{
  "name": "initproject-nodejs",
  "version": "1.0.0",
  "description": "Init project for nodejs/mongodb app",
  "type": "module",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "lint": "./node_modules/.bin/eslint --fix src",
    "start": "node --experimental-modules src/index.js start",
    "start-watch": "node --experimental-modules run watch"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "mpielvitori",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-recommended": "^2.0.0",
    "eslint-plugin-jest": "^21.6.2",
    "jest": "^22.1.1",
    "jest-cli": "^22.1.1",
    "jest-json-schema": "^1.2.0",
    "jest-spec-reporter": "^1.0.4"
  },
  "dependencies": {
    "express": "^4.16.3",
    "mongoose": "^5.0.11",
    "body-parser": "=1.19.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "verbose": true,
    "testEnvironment": "node"
  }
}
